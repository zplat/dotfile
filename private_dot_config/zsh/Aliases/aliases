#----------------------------------------------------------------------------------------------------------@
#                                                                               File managers

alias l="br -pd"                                                                # ls via broot	
alias L="ls -laA"             		    			                                    # ls
alias Ld='ls -d */'	    				                                                # directories only
alias Lf="ls -l | grep -Ev '^d'"                                                # files only
#----------------------------------------------------------------------------------------------------------@
#                                                                               Applications

alias t='tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf'                             	# tmux
alias v="nvim"                                                                  # nvim
alias sx="$XDG_CONFIG_HOME/sxiv/sxiv.sh"                                        # sxiv - open dir/file script
alias PLAYLIST="$HOME/.local/bin/mpv-player.sh"                                 # mpv playlist in folder

#----------------------------------------------------------------------------------------------------------@
#                                                                               Emanote Zettelkasten

alias ema="zk ema"                                                              # Emanote server
#----------------------------------------------------------------------------------------------------------@
#                                                                               zk Zettelkasten

alias daily="zk daily"                                                          # Daily journal 
alias zI="zk edit -i"                                                            # zk edit interactive
#----------------------------------------------------------------------------------------------------------@
#                                                                               startx Window Manager

alias awesome="startx $XINITRC awesome" 			                            # awesomewm
alias dwm="startx $XINITRC dwm"                               				    # dwm
#----------------------------------------------------------------------------------------------------------@
#                                                                               Web Tools

alias b="buku"                                                                  # buku bookmarks
#----------------------------------------------------------------------------------------------------------@
#                                                                               OS Cmds

alias shut='shutdown -h now'                                                    # shutdown
#----------------------------------------------------------------------------------------------------------@
#                                                                               Git

alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME' 	    # alias to the dotfiles
alias secula='/usr/bin/git --git-dir=$HOME/.secfiles/ --work-tree=$HOME' 	    # alias to private dotfiles
#----------------------------------------------------------------------------------------------------------@
#                                                                               mail

alias mbsync="mbsync -c \"$XDG_CONFIG_HOME/isync/mbsyncrc\""                    # mbsync
#----------------------------------------------------------------------------------------------------------@
#                                                                               qmk

alias flash_9="qmk flash -kb ferris/sweep -km ferris9 -bl dfu"                  # flash ferris9
alias compile_9="qmk compile -kb ferris/sweep -km ferris9 "                  # flash ferris9
#----------------------------------------------------------------------------------------------------------@
#                                                                               qmk

alias kytty="$HOME/.local/repositories/kitty/kitty/launcher/kitty"             # kitty terminal
#----------------------------------------------------------------------------------------------------------@
